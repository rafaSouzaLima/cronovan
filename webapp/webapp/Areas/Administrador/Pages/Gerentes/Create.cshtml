@page
@model CreateModel
@{
    ViewData["Title"] = "Novo Gerente";
}

@section Menus {
    <li class="nav-item">
        <a class="nav-link" asp-area="Administrador" asp-page="/Gerentes/Index">Gerentes</a>
    </li>
}

<h1>@ViewData["Title"]</h1>

<hr />
<section class="row justify-content-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Nome" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Nome" class="form-label">Nome</label>
            <span asp-validation-for="Input.Nome" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">E-mail</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Senha" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Senha" class="form-label">Senha</label>
            <span asp-validation-for="Input.Senha" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmarSenha" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmarSenha">Confirmar Senha</label>
            <span asp-validation-for="Input.ConfirmarSenha" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Cadastrar</button>
    </form>
</section>